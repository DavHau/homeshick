#!/usr/bin/env bash
set -e

main() {
  cd "$(dirname "${BASH_SOURCE[0]}")"
  local version_path
  local ret=0
  for version_path in bash-versions/*; do
    [[ -d $version_path ]] || continue
    if ! PATH=$PWD/$version_path:$PATH bats --tap "$PWD/suites"; then
      ret=$?
    fi
  done
  return $ret
}

main "$@"
